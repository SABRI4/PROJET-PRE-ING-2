# plot_script.plt
set title "Distances for Trajectories"
set xlabel "Trajet ID"
set ylabel "Distance (km)"
set key top left

# Set transparent fill style for the area between curves 1 and 2
set style fill transparent solid 0.5

# Plot data with lines and transparent fill between curves 1 and 2
plot 'data.txt' using 1:2 with lines title 'Curve 1', \
     '' using 1:3:($0):($3-$2) with filledcurves fillstyle solid 1.0 title 'Curve 1 to 2', \
     '' using 1:3 with lines title 'Curve 2', \
     '' using 1:4 with lines title 'Curve 3'
